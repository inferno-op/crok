      </Uniform>
      
      <Uniform Row="0" Col="2" Page="0" Default="True" Tooltip="" DisplayName="Add Grain" Type="bool" Name="pAddGrain">
      </Uniform>
      <Uniform ResDependent="None" Max="100.0" Min="0.0" Default="5.0" Inc="0.01" Tooltip="" Row="1" Col="2" Page="0" DisplayName="Gain" Type="float" Name="pGrainsize">
