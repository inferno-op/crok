	  </Uniform>
	  <Uniform ResDependent="None" Max="1000.0" Min="0.0" Default="5.0" Inc="0.1" Tooltip="" Row="1" Col="1" Page="1" DisplayName="Bars" Type="float" Name="bars_count">
