	 <Uniform Row="0" Col="2" Page="1" Default="False" Tooltip="Enable / Disable TV Lines" DisplayName="Add TV Lines" Type="bool" Name="tv_tube_lines">
	  </Uniform>
      <Uniform ResDependent="None" Max="10.0" Min="0.01" Default="2.5" Inc="0.01" Tooltip="" Row="1" Col="2" Page="1" DisplayName="Lines" Type="float" Name="tv_lines">
      </Uniform>
	  <Uniform ResDependent="None" Max="10.0" Min="0.0" Default="1.0" Inc="0.1" Tooltip="" Row="2" Col="2" Page="1" DisplayName="Opacity" Type="float" Name="tv_lines_opacity">
