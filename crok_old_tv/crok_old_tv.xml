      <Uniform ResDependent="None" Max="5.0" Min="0.0" Default="0.85" Inc="0.01" Tooltip="" Row="3" Col="0" Page="0" DisplayName="Frequency" Type="float" Name="timer">
      </Uniform>
      <Uniform ResDependent="None" Max="5.0" Min="1.0" Default="2.0" Inc="0.01" Tooltip="" Row="4" Col="0" Page="0" DisplayName="Speed" Type="float" Name="speed">
      </Uniform>

	  <Uniform Row="0" Col="1" Page="0" Default="True" Tooltip="Enable / Disable Vignette" DisplayName="Add Vignette" Type="bool" Name="add_vignette">
